{
    "env": {
        "browser": true
    },

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "parser": "babel-eslint",

    "plugins": [
        "react"
    ],

    "rules": {
        "camelcase": ["off"],
        "eqeqeq": ["error", "always"],
        "indent": ["error", 4],
        "line-endings": ["off"],
        "max-len": ["error", {
            "code": 100,
            "ignoreUrls": true
        }],
        "no-console": ["off"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": [ "**/*.test.js" ],
            "env": { "jest": true }
        }
    ]
}

